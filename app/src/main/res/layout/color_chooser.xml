<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <TextView
        android:id="@+id/red_text_view"
        android:text="Red"
        android:textAlignment="center"
        android:textSize="36sp"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignLeft="@+id/green_text_view"
        android:layout_alignStart="@+id/green_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@id/green_text_view"
        android:text="Green"
        android:textAlignment="center"
        android:textSize="36sp"
        android:layout_below="@id/red_text_view"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/blue_text_view"
        android:text="Blue"
        android:textAlignment="center"
        android:textSize="36sp"
        android:layout_below="@id/green_text_view"
        android:layout_alignLeft="@id/green_text_view"
        android:layout_alignStart="@id/green_text_view"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <SeekBar
        android:id="@+id/red_seek_bar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_toLeftOf="@id/red_text_view"
        android:layout_toStartOf="@id/red_text_view"
        android:max="255"
        android:progress="255" />

    <SeekBar
        android:id="@+id/green_seek_bar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@id/red_text_view"
        android:layout_toLeftOf="@id/red_text_view"
        android:layout_toStartOf="@id/red_text_view"
        android:max="255"
        android:progress="255" />

    <SeekBar
        android:id="@+id/blue_seek_bar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@id/green_text_view"
        android:layout_toLeftOf="@id/red_text_view"
        android:layout_toStartOf="@id/red_text_view"
        android:max="255"
        android:progress="255" />

</RelativeLayout>